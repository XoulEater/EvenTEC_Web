---
import { Astronav, MenuItems, Dropdown, DropdownItems } from "astro-navbar";
---

<header
  class="w-full flex bg-zinc-900 inset-x-0 justify-between content-center align-middle h-16 shadow-lg top-0 z-50"
>
  <Astronav>
    <div class="flex items-center px-5">
      <svg
        class="mr-4"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-calendar-event"
        width="44"
        height="44"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="#ffffff"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path
          d="M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
        ></path>
        <path d="M16 3l0 4"></path>
        <path d="M8 3l0 4"></path>
        <path d="M4 11l16 0"></path>
        <path d="M8 15h2v2h-2z"></path>
      </svg>

      <button
        class="w-28 text-lg hover:underline tr h-full px-3"
        onclick="location.href = 'eventPage.html';"
      >
        Inicio
      </button>
      <button
        class="w-28 text-lg hover:underline h-full px-3"
        onclick="location.href = 'calendarPage.html';"
      >
        Calendario
      </button>
      <button
        class="w-28 text-lg hover:underline h-full px-3"
        onclick="location.href = 'crearEvento.html';"
      >
        Crear
      </button>
    </div>

    <div class="middle-section flex items-center w-full px-8">
      <button class="search-button motion-safe:transition hover:opacity-60">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-search -mr-8"
          width="30"
          height="30"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="#ffffff"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
          <path d="M21 21l-6 -6"></path>
        </svg>
      </button>
      <input
        class="searchBar w-full h-10 bg-zinc-800/30 rounded-full pl-12 pr-3 -ml-2 min-w-7"
        type="search"
        placeholder="Busqueda"
      />
    </div>

    <MenuItems
      class="right-section flex content-center items-center px-5 gap-3"
    >
      <Dropdown class="group pt-1">
        <button class="hover:scale-125 motion-safe:transition hover:opacity-60">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-bell"
            width="44"
            height="44"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#ffffff"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M10 5a2 2 0 1 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3h-16a4 4 0 0 0 2 -3v-3a7 7 0 0 1 4 -6"
            ></path>
            <path d="M9 17v1a3 3 0 0 0 6 0v-1"></path>
          </svg>
        </button>
        <DropdownItems class="obsolute bg-zinc-800">
          <div class="absolute top-16 right-0 bg-zinc-800 w-96 h-96"></div>
        </DropdownItems>
      </Dropdown>

      <button
        class="hover:scale-125 motion-safe:transition hover:opacity-60"
        onclick="location.href = 'profilePage.html';"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-user-circle"
          width="44"
          height="44"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="#ffffff"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
          <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
          <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"
          ></path>
        </svg>
      </button>

      <Dropdown class="group">
        <button
          class="flex hover:scale-125 motion-safe:transition hover:opacity-60"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-dots-vertical"
            width="44"
            height="44"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="#ffffff"
            fill="#ffffff"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
            <path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
            <path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
          </svg>
        </button>
        <DropdownItems class="obsolute bg-zinc-800 z-40">
          <div class="absolute top-16 right-0 bg-zinc-800 w-fit">
            <ul class="text-lg flex flex-col">
              <li class="py-3 px-7 flex gap-1 content-center hover:bg-zinc-800">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon icon-tabler icon-tabler-messages"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#ffffff"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path
                    d="M21 14l-3 -3h-7a1 1 0 0 1 -1 -1v-6a1 1 0 0 1 1 -1h9a1 1 0 0 1 1 1v10"
                  ></path>
                  <path d="M14 15v2a1 1 0 0 1 -1 1h-7l-3 3v-10a1 1 0 0 1 1 -1h2"
                  ></path>
                </svg>
                <button>Foro</button>
              </li>
              <li class="py-3 px-7 flex gap-1 content-center hover:bg-zinc-800">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon icon-tabler icon-tabler-calendar-clock"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#ffffff"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path
                    d="M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3"
                  ></path>
                  <path d="M16 3v4"></path>
                  <path d="M8 3v4"></path>
                  <path d="M4 11h10"></path>
                  <path d="M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
                  <path d="M18 16.5v1.5l.5 .5"></path>
                </svg>
                <button>Propuestas</button>
              </li>
              <li class="py-3 px-7 flex gap-1 content-center hover:bg-zinc-800">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon icon-tabler icon-tabler-qrcode"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#ffffff"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path
                    d="M4 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"
                  ></path>
                  <path d="M7 17l0 .01"></path>
                  <path
                    d="M14 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"
                  ></path>
                  <path d="M7 7l0 .01"></path>
                  <path
                    d="M4 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"
                  ></path>
                  <path d="M17 7l0 .01"></path>
                  <path d="M14 14l3 0"></path>
                  <path d="M20 14l0 .01"></path>
                  <path d="M14 14l0 3"></path>
                  <path d="M14 20l3 0"></path>
                  <path d="M17 17l3 0"></path>
                  <path d="M20 17l0 3"></path>
                </svg>
                <button>QR</button>
              </li>
              <li class="py-3 px-7 flex gap-1 content-center hover:bg-zinc-800">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="icon icon-tabler icon-tabler-logout"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="#ffffff"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path
                    d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2"
                  ></path>
                  <path d="M9 12h12l-3 -3"></path>
                  <path d="M18 15l3 -3"></path>
                </svg>
                <button>Salir</button>
              </li>
            </ul>
          </div>
        </DropdownItems>
      </Dropdown>
    </MenuItems>
  </Astronav>
</header>
