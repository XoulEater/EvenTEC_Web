---
interface Props {
  image: string;
  title: string;
  body: string;
  id: string;
}

const { id, title, body, image } = Astro.props;
---

<article
  class="relative aspect-video backdrop-blur-md shadow-inner border border-black/10 shadow-white/10 rounded-xl overflow-hidden group"
>
  <img
    src={image === ""
      ? "https://dicesabajio.com.mx/wp-content/uploads/2021/06/no-image.jpeg"
      : image}
    alt={title}
    class="background transition-scale absolute inset-0 w-full h-full object-cover object-center -z-10 opacity-90 group-hover:scale-[1.05] group-hover:saturate-100 saturate-50 transition-all duration-300 ease-in-out"
  />
  <div class="select-none flex flex-col px-3 py-1 justify-end h-full">
    <h2 class="text-lg text-white/90 font-bold z-20">{title}</h2>
    <h3 class="text-white/70 font-medium z-20">{body}</h3>
  </div>

  <div
    class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent -z-10"
  >
  </div>
</article>
